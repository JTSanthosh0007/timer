<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MindControl" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_electric_blue</item>
        <item name="colorPrimaryVariant">@color/bg_dark_start</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_electric_blue</item>
        <item name="colorSecondaryVariant">@color/accent_electric_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_dark_start</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_color</item>
        <!-- Ensure NumberPicker text is visible (white) and remove divider -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>
</resources>

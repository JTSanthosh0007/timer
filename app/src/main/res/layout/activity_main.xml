<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_premium_gradient"
    tools:context=".MainActivity">

    <!-- SETUP LAYOUT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvFocusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Focus Mode"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.7"
            android:text="Stay intentional. Eliminate distractions."
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFocusLabel" />

        <!-- Pro Badge -->
        <TextView
            android:id="@+id/btnPremium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_segment_selected"
            android:paddingHorizontal="12sp"
            android:paddingVertical="6sp"
            android:text="PRO"
            android:textColor="@color/accent_electric_blue"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tvFocusLabel"
            app:layout_constraintBottom_toBottomOf="@id/tvFocusLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Segmented Control -->
        <LinearLayout
            android:id="@+id/segmentedControl"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_segment_container"
            android:orientation="horizontal"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <TextView
                android:id="@+id/btnTabPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_segment_selected"
                android:gravity="center"
                android:text="Phone Lock"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/btnTabApp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="App Block"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Time Picker Section -->
        <LinearLayout
            android:id="@+id/timerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/segmentedControl"
            app:layout_constraintBottom_toTopOf="@id/btnStartContainer"
            app:layout_constraintVertical_bias="0.2">

            <!-- Current Selection Display -->
            <TextView
                android:id="@+id/tvSelectedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:00:00"
                android:textColor="@color/text_primary"
                android:textSize="64sp"
                android:fontFamily="sans-serif-thin" />

            <!-- Preset Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/chip15m"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="72dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_segment_container"
                        android:text="15m"
                        android:textAllCaps="false"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/chip30m"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="72dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_segment_container"
                        android:text="30m"
                        android:textAllCaps="false"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/chip1h"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="72dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_segment_selected"
                        android:text="1h"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/chip2h"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="72dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_segment_container"
                        android:text="2h"
                        android:textAllCaps="false"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/chipCustom"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="84dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_segment_container"
                        android:text="Custom"
                        android:textAllCaps="false"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Custom Picker (Positioned above button) -->
            <LinearLayout
                android:id="@+id/customPickerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                
                <NumberPicker android:id="@+id/npHour" android:layout_width="80dp" android:layout_height="100dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="h" android:textColor="@color/text_secondary" android:layout_marginEnd="16dp"/>
                <NumberPicker android:id="@+id/npMinute" android:layout_width="80dp" android:layout_height="100dp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="m" android:textColor="@color/text_secondary"/>
            </LinearLayout>

        </LinearLayout>

        <!-- App List Container (Hidden) -->
        <LinearLayout
            android:id="@+id/appListContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btnStartContainer"
            app:layout_constraintTop_toBottomOf="@id/segmentedControl">

            <TextView
                android:id="@+id/tvSelectedApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Selected: Phone, Messages"
                android:textColor="@color/accent_electric_blue"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_segment_container"
                android:hint="Search apps..."
                android:paddingHorizontal="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvApps"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Bottom Actions -->
        <LinearLayout
            android:id="@+id/btnStartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@id/tvHistoryHeader">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/bg_button_primary"
                android:text="Begin Focus Session"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />

            <FrameLayout
                android:id="@+id/ad_frame"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/btnPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Preview Lock â†’"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- History Section (Now scrollable for multiple entries) -->
        <TextView
            android:id="@+id/tvHistoryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Sessions"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toTopOf="@id/historyScrollView"
            app:layout_constraintStart_toStartOf="@id/historyScrollView" />

        <ScrollView
            android:id="@+id/historyScrollView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_segment_container"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <LinearLayout
                android:id="@+id/historyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- LOCKED LAYOUT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lockedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorSize="280dp"
            app:trackThickness="4dp"
            app:trackColor="@color/surface_elevated"
            app:indicatorColor="@color/accent_electric_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/progressTimer"
            app:layout_constraintEnd_toEndOf="@id/progressTimer"
            app:layout_constraintStart_toStartOf="@id/progressTimer"
            app:layout_constraintTop_toTopOf="@id/progressTimer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:49:12"
                android:textColor="@color/text_primary"
                android:textSize="48sp"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEndTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Ends at 10:30 PM"
            android:textColor="@color/text_secondary"
            app:layout_constraintBottom_toTopOf="@id/llAllowedDock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/llAllowedDock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allowed Apps"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAllowedApps"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_app" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ENDED LAYOUT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/endedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Complete"
            android:textColor="@color/accent_electric_blue"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/btnScheduleNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnScheduleNext"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="32dp"
            android:background="@drawable/bg_segment_container"
            android:text="Schedule Next"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            app:layout_constraintBottom_toTopOf="@id/btnCheck" />

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_button_primary"
            android:text="Close"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

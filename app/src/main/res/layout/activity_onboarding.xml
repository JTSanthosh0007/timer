<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- ViewFlipper for onboarding steps -->
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <!-- ========== STEP 1: Welcome Screen ========== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Focus Label -->
            <TextView
                android:id="@+id/tvFocusLabelWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:text="Focus on what matters"
                android:textColor="@color/orange_accent"
                android:textSize="16sp"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Main Title -->
            <TextView
                android:id="@+id/tvTitleWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Blocks Phone Usage\nCompletely"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFocusLabelWelcome" />

            <!-- Illustration Container -->
            <FrameLayout
                android:id="@+id/illustrationContainer"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/bg_circle_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleWelcome">

                <ImageView
                    android:id="@+id/ivIllustration"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phone_block"
                    android:contentDescription="Phone Block Illustration" />

            </FrameLayout>

            <!-- Start Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartNow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/bg_button_primary"
                android:text="Start now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ========== STEP 2: Permissions Screen ========== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvPermTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="Permissions are required\nto use"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvPermSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Even if you're weak, you can block all apps"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tvPermTitle" />

            <!-- Toggle Card -->
            <LinearLayout
                android:id="@+id/toggleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_card_rounded"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/tvPermSubtitle">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_lock_red"
                    android:contentDescription="Lock Icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="ðŸ”’ Mind Control"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchDetox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/orange_accent"
                    app:trackTint="@color/gray_medium" />

            </LinearLayout>

            <!-- Permission Items Container -->
            <LinearLayout
                android:id="@+id/permissionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/toggleCard">

                <!-- Permission 1: Display over other apps -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_number_circle"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Display over other apps"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Prevent access to other apps during lock"
                            android:textColor="@color/gray_text"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnPermOverlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_allow"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="Allow"
                        android:textColor="@color/orange_accent"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Permission 2: Usage access -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_number_circle"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usage access"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Track your screen time data"
                            android:textColor="@color/gray_text"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnPermUsage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_allow"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="Allow"
                        android:textColor="@color/orange_accent"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Permission 3: Accessibility Service -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_number_circle"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accessibility service"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Block apps during focus session"
                            android:textColor="@color/gray_text"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnPermAccessibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_allow"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="Allow"
                        android:textColor="@color/orange_accent"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Continue Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPermContinue"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/bg_button_primary"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ========== STEP 3: Usage Survey Screen ========== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvSurveyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:gravity="center"
                android:text="How long do you use your\nphone daily?"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Options Container -->
            <LinearLayout
                android:id="@+id/optionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tvSurveyTitle">

                <TextView
                    android:id="@+id/optionLess1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_option_unselected"
                    android:gravity="center"
                    android:text="Less than 1 hour"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/option1to3"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_option_unselected"
                    android:gravity="center"
                    android:text="1 to 3 hours"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/option3to5"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_option_unselected"
                    android:gravity="center"
                    android:text="3 to 5 hours"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/option5to7"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_option_unselected"
                    android:gravity="center"
                    android:text="5 to 7 hours"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/option7to9"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_option_unselected"
                    android:gravity="center"
                    android:text="7 to 9 hours"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/optionMore9"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_option_unselected"
                    android:gravity="center"
                    android:text="More than 9 hours"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Next Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSurveyNext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/bg_button_disabled"
                android:enabled="false"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/gray_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ========== STEP 4: Check Usage Screen ========== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvCheckTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Let's check your\nactual usage time."
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.35" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvCheckSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="We are referencing your\nscreen time data."
                android:textColor="@color/orange_accent"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvCheckTitle" />

            <!-- Next Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCheckNext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/bg_button_white"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ========== STEP 5: Comparison Screen ========== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvCompareTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:gravity="center"
                android:text="You are using more than\nyour estimate"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Chart Container -->
            <LinearLayout
                android:id="@+id/chartContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="32dp"
                app:layout_constraintTop_toBottomOf="@id/tvCompareTitle"
                app:layout_constraintBottom_toTopOf="@id/btnCompareNext">

                <!-- Estimated Bar -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvEstimatedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‰¤ 1h"
                        android:textColor="@color/gray_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:id="@+id/barEstimated"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_bar_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Estimated"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Actual Bar -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvActualValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9h 11m"
                        android:textColor="@color/orange_accent"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:id="@+id/barActual"
                        android:layout_width="70dp"
                        android:layout_height="180dp"
                        android:background="@drawable/bg_bar_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Actual"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Next Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCompareNext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/bg_button_white"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ========== STEP 6: Top Apps Screen ========== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTopAppsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:gravity="center"
                android:text="The app that takes up most\nof my time lately."
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Apps Card -->
            <LinearLayout
                android:id="@+id/topAppsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:background="@drawable/bg_card_rounded"
                android:orientation="vertical"
                android:padding="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvTopAppsTitle">

                <!-- Total Time Header -->
                <TextView
                    android:id="@+id/tvTotalTimeHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="In 9h 11m..."
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp" />

                <!-- App 1 -->
                <LinearLayout
                    android:id="@+id/app1Container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivApp1Icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/app_logo"
                            android:contentDescription="App Icon" />

                        <TextView
                            android:id="@+id/tvApp1Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Instagram"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvApp1Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3h 56m"
                            android:textColor="@color/orange_accent"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Progress Bar -->
                    <View
                        android:id="@+id/progressApp1"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_progress_gradient" />
                </LinearLayout>

                <!-- App 2 -->
                <LinearLayout
                    android:id="@+id/app2Container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivApp2Icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/app_logo"
                            android:contentDescription="App Icon" />

                        <TextView
                            android:id="@+id/tvApp2Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="WhatsApp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvApp2Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29m"
                            android:textColor="@color/orange_accent"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Progress Bar -->
                    <View
                        android:id="@+id/progressApp2"
                        android:layout_width="80dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_progress_orange_red" />
                </LinearLayout>

